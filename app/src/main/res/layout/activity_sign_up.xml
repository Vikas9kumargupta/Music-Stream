<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#302B2B"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Authentication.SignUpActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logo"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:src="@drawable/logo"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore latest hits only on "
        android:textSize="31sp"
        android:paddingHorizontal="18dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:textColor="@color/textWhite"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music Stream"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textSize="31sp"
        android:paddingHorizontal="18dp"
        android:layout_marginTop="2sp"
        android:textColor="@color/textWhite"/>
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/white"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/edt_background"
        android:hint="Name"
        android:textColorHint="@color/white"
        android:inputType="text"
        android:paddingLeft="15dp"
         />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="30dp"
        android:textColor="@color/white"
        android:background="@drawable/edt_background"
        android:hint="Email"
        android:layout_marginTop="22dp"
        android:textColorHint="@color/white"
        android:inputType="textEmailAddress"
        android:paddingLeft="15dp"
         />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/white"
        android:background="@drawable/edt_background"
        android:hint="Password"
        android:textColorHint="@color/white"
        android:paddingLeft="15dp"
        />

    <Button
        android:id="@+id/signUp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#36AF58"
        android:elevation="5dp"
        android:text="Create Account"
        android:textSize="23dp"
        app:cornerRadius="16dp"
         />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:indeterminateTint="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="90sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/signUp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:text="@string/you_are_already_registered"/>
        <TextView
            android:id="@+id/loginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textSize="17sp"
            android:textColor="@color/colorPrimary"
            android:text="@string/_login"/>
    </LinearLayout>

</LinearLayout>